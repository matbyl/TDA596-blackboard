# ------------------------------------------------------------------------------
# Utility function to parse an endpoint
# ------------------------------------------------------------------------------
def parse_endpoint(endpoint):
  parts = endpoint.split('/')
  return {
    "resource": "/" + parts[0],
    "id": parts[1]
  }


