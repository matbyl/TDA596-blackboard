"""

 Name: entry.repy

 Description: Entry on the blackboard contains a message and a vector with
 timestamps.

"""

include util.repy

class Entry:

    def __init__(self, msgid, msg, timestamp, host):
        self.id = msgid
        self.set_html(msg, timestamp)
        self.timestamp = timestamp
        self.host = host

    def get_timestamp(self):
        return self.timestamp

    def get_host(self):
        return self.host

    def get_html(self):
        return self.html

    def last_update(self):
        return self.last_updated;

    def set_html(self, msg, timestamp):
        self.last_updated = timestamp;
        self.html = generate_entry(self.id, msg)
